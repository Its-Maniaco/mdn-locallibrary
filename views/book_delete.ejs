<h1><%= title %>: <%= book.name %></h1>

<% if (book_instances.length) { %>
  <p><strong>Delete the following book instances before attempting to delete this book.</strong></p>
  <div style="margin-left: 20px; margin-top: 20px;">
    <h4>Instances</h4>
    <dl>
      <% book_instances.forEach(function (instance) { %>
        <dt>
          <a href="<%= instance.url %>"><%= instance.status %></a>
        </dt>
        <dd><%= instance.status %></dd>
      <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this book?</p>

  <form method="POST">
    <div class="form-group">
      <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
